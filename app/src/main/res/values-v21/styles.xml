<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme.Main" >
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <item name="android:windowReenterTransition">@null</item>
        <item name="android:windowSharedElementReenterTransition">@null</item>
    </style>

    <style name="AppTheme.Detail">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnterTransition">@transition/detail_enter</item>
        <item name="android:windowReturnTransition">@transition/detail_return</item>
        <item name="android:windowSharedElementReturnTransition">@null</item>
    </style>
</resources>